{
  "manifest_version": 3,
  "name": "SecQR",
  "version": "1.0",
  "description": "Securely scan & block malicious QR codes",
  "icons": {
    "128": "icons/icon.png"
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "SecQR"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeContent",
    "declarativeNetRequest",
    "webNavigation",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "oauth2": {
    "client_id": "326060264822-san17tbv7cuivo81tg3vqc49dpc2g0gk.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email", "https://www.googleapis.com/auth/userinfo.profile"]
  }
}
